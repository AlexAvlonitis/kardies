%footer
  .container-fluid
    .row
      .col
        = link_to locale: "en-gb" do
          = image_tag "uk_flag.png"
        = link_to locale: "el" do
          = image_tag "greek_flag.png"
        - unless user_signed_in?
          %p= link_to "#{t 'contacts.index.contact'}", contacts_path
      .col.text-center
        © 2016 #{t '.copyright'} Κardies.gr
      .col.text-right
        = link_to "#{t '.terms'}", terms_path
        %p
          = link_to "https://www.facebook.com/kardies.gr", target: "_blank" do
            = fa_icon "facebook-square 2x"
