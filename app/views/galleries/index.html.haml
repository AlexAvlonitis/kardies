.medium-6.small-centered.columns
  %nav{ "aria-label" => "You are here:", "role" => "navigation" }
    %ul.breadcrumbs
      %li= link_to "#{t 'abouts.edit.profile'}", edit_user_registration_path
      %li= link_to "#{t 'abouts.edit.about_me'}", edit_about_path
      %li
        %span.show-for-sr Current:
        =t 'abouts.edit.galleries'


  %h2.orange-text=t 'users.show.galleries'
  %h5.subheader
    = link_to '', class: "create-gallery" do
      = t 'users.show.create_gallery'
      = fa_icon "plus-square"

  .hidden-gallery-form
    = render 'galleries/form', {gallery: @gallery}

  %hr
  %h4.orange-text=t 'users.show.my_galleries'
  - if @galleries
    - @galleries.each do |gallery|
      %h5
        = gallery.name
        = link_to gallery_path(gallery), method: :delete, data: {confirm: "#{t '.gallery_delete_confirmation'}"} do
          = fa_icon 'trash'

      - gallery.pictures.each do |pic|
        = image_tag pic.picture.url(:thumb), class: "thumbnail"

  %p= link_to "#{t 'abouts.edit.back'}", :back
