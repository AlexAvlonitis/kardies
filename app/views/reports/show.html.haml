.col-lg-6.col-sm-12.mx-auto
  %h1.orange-text
    = t '.report'
    = params[:username]
  = simple_form_for @report do |f|
    = f.input :reason, label: "#{t '.reason'}"
    = f.input :description, label: "#{t '.details'}"
    = f.hidden_field :username, value: params[:username]
    = f.submit "#{t '.send_report'}", class: "btn btn-danger btn-block btn-sm"
