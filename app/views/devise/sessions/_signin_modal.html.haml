#signin_modal.reveal{ "data-reveal" => "", "data-close-on-click" => "true", "data-animation-in" => "fade-in", "data-animation-out" => "fade-out" }
  %h2 Συνδεθείτε
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    = f.email_field :email, autofocus: true, placeholder: "Email"
    = f.password_field :password, autocomplete: "off", placeholder: "Password"
    = f.submit "Log in", class: "button primary expanded"
    - if devise_mapping.rememberable?
      .row
        = f.check_box :remember_me
        = f.label :remember_me
  %button.close-button{ "data-close" => "", "aria-label" => "Close reveal", "type" => "button" }
    %span{ "aria-hidden" => "true" } &times;

  %p= render "devise/shared/links"
