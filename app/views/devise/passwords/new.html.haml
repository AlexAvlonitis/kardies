= title "#{t 'home.index.meta_forgot_password_title'}"
= meta_tag :description, "#{t 'home.index.meta_forgot_password_description'}"

#bg
  .container-fluid.text-center
    .row.justify-content-center
      = link_to root_path, class: "mt-4" do
        = image_tag 'kardies-logo-original.png', class: "logo"
    .row.justify-content-center
      .col-xs-12.col-sm-8.col-md-4.light-grey-bg.p-4.effect1.m-4.text
        %h2= t 'home.index.forgot_password'
        %hr.colorgraph
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
          = devise_error_messages!
          .form-group
            = f.email_field :email, autofocus: true, class: "form-control form-control-lg", placeholder: "Email"
          %hr.colorgraph
          .form-group
            = f.submit "#{t 'home.index.send_pass_instructions'}", class: "btn btn-success"

        = link_to user_facebook_omniauth_authorize_path, class: 'btn btn-primary btn-sm ' do
          = t 'home.index.fb_sign_in'
