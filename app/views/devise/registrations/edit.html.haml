.col-md-4.col-md-offset-4
  %h2
    Edit #{resource_name.to_s.humanize}
    = link_to 'About me', edit_about_path
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|

    = f.simple_fields_for :user_detail do |d|
      = d.input :profile_picture, as: :file, label: 'Profile Picture'
      = d.input :first_name
      = d.input :last_name
      = d.input :state, collection: GC.states
      = d.input :city, collection: GC.cities('att')
      = d.collection_radio_buttons :gender, [['male', 'Male'], ['female', 'Female']], :first, :last
      = d.input :age, as: :date, start_year: Date.today.year - 90,
                                 end_year: Date.today.year - 12,
                                 order: [:day, :month, :year]

    = f.input :username
    = f.input :email

    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %div
        Currently waiting confirmation for: #{resource.unconfirmed_email}

    %i (leave blank if you don't want to change it)
    = f.input :password
    = f.input :password_confirmation

    %i (we need your current password to confirm your changes)
    = f.input :current_password

    = f.submit "Update", class: "btn btn-lg btn-primary"
  %h3 Cancel my account
  %p Unhappy?
  = button_to "Cancel my account", registration_path(resource_name),
                                              data: { confirm: "Are you sure?" },
                                              method: :delete,
                                              class: 'btn btn-md btn-danger'
  = link_to "Back", :back
