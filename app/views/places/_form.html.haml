= form_for @place do |f|
  - if @place.errors.any?
    %h2= "#{pluralize(@place.errors.count, "error")} prohibited this article from being saved:"

    %ul
    - @place.errors.full_messages.each do |msg|
      %li= msg
      
  = f.label :country, "Which country are you visiting?"
  = f.text_field :country
  = f.label :country, "And which city?"
  = f.text_field :city
  = f.label :visit_date, "On which Date?"
  = f.date_field :visit_date

  =f.submit "Save"
