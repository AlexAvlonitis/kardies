- if conversation.participants.count > 1
  - participant = conversation.participants.reject { |user| current_user == user }.first
  %tr
    %td
      .row
        .col-lg-2.col-md-2.col-sm-12
          = link_to conversation_path(conversation) do
            .pic-round-sm{ style: "background-image: url(#{participant.profile_picture})"}
        .col-lg-8.col-md-8.col-sm-12
          %strong.pt-2= participant.username.capitalize
          %p.small
            = conversation.created_at.to_formatted_s(:short)
            - if conversation.is_unread?(current_user)
              %span.badge.badge-pill.badge-success= t '.new_message'

        .col-lg-2.col-md-2.col-sm-12
          - if conversation.is_trashed?(current_user)
            = link_to "#{t '.restore'}", restore_conversation_path(conversation),
                                         class: 'btn btn-outline-primary btn-sm btn-primary',
                                         method: :post

          - else
            .red-text
              = link_to conversation_path(conversation), method: :delete, class: "btn btn-outline-danger", title: "#{t '.delete'}", data: {confirm: "#{t '.delete_confirm'}"} do
                = fa_icon "times 2x"
