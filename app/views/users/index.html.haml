.row
  .col
    .top-search.effect2
      = render partial: 'search'
.row
  = render partial: 'layouts/kardies_ad'
.row.justify-content-center
  .card-deck.justify-content-center
    - if ! @users.map {|f| f}.blank?
      - @users.each do |user|
        - if user && !user.deleted_at && !(user == current_user)
          - present user do |user_presenter|
            = render partial: 'card',
                locals: {user: user, user_presenter: user_presenter}
    - else
      %h4= t '.no_results'

.row.justify-content-center
  = paginate @users, window: 1

= render partial: 'messages/message_modal'
