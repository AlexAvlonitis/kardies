- present @user do |user_presenter|
  .large-3.medium-3.small-12.columns
    %h1
      = @user.username
    = image_tag @user.profile_picture(:medium)
    %p= user_presenter.new_message
    %span.like= user_presenter.like_status

    %ul
      %li Lives in: #{@user.city}
      %li Age: #{@user.age}

  .large-9.medium-9.small-12.columns
    %h1 Galleries
    - @user.galleries.each do |gallery|
      %h3= gallery.name
      %p= gallery.description
      - gallery.pictures.each do |pic|
        = image_tag pic.picture.url(:medium)


    .small-12
      %h1 About me
      %h4 Job
      %p= @user.job
      %h4 Hobby
      %p= @user.hobby
      %h4 Relationhip status
      %p= @user.relationship_status
      %h4 Looking for
      %p= @user.looking_for
      %h4 A little description about me
      %p= @user.description
