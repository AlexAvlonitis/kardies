- present @user do |user_presenter|
  .large-3.medium-3.small-12.columns
    = image_tag @user.profile_picture(:medium), class: "thumbnail"
    %h3.text-center
      = @user.username
    %ul.menu.expanded
      %li= user_presenter.new_message
      %li.pull-right= user_presenter.like_status
    %hr
    = link_to "#{t 'users.index.report'}", report_path(@user), class: "button warning hollow expanded"

    %ul.menu.vertical
      %li
        %span.orange-text= t 'users.index.area'
        = GC.get_city_name(@user.state, @user.city) + " " + '(' + GC.get_state_name(@user.state) + ')'
      %li
        %span.orange-text= t 'users.search.age'
        = @user.age

  .large-9.medium-9.small-12.columns
    %h1 Galleries
    - @user.galleries.each do |gallery|
      #gallery
        %h5= gallery.name
        %p= gallery.description
        - gallery.pictures.each do |pic|
          = link_to pic.picture.url do
            = image_tag pic.picture.url, class: "icon-size"


    .small-12
      %h1 About me
      %h4 Job
      %p= @user.job
      %h4 Hobby
      %p= @user.hobby
      %h4 Relationship status
      %p= @user.relationship_status
      %h4 Looking for
      %p= @user.looking_for
      %h4 A little description about me
      %p= @user.description
