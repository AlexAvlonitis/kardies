.card.small-1.medium-1.large-3.columns.effect1
  .card-top
    = image_tag user.profile_picture(:medium)
  .card-divider
    = "Online now" if user.is_signed_in?
  .card-block
    %h5.card-title= user.username
    %p.card-text Age: #{user.age}
    %span.message= user_presenter.new_message
    %span.vertical-border
    %span.like= user_presenter.like_status
